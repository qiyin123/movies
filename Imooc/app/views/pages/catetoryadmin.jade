extends ../layout

block content
	.container
		form.form-horizontal(method="post",action="/admin/catetory",enctype="multipart/form-data",style="margin-bottom:100px;") 
				input(type="hidden",name="catetory[id]",value="#{catetory._id}")
				.form-group
					label.col-sm-2.control-label(for="inputCatetory") 电影分类
					.col-sm-10
						input#inputCatetory.form-control(type="text",name="catetory[name]",value=catetory.name)
				.form-group
					.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 录入